<h1>Listing products</h1>

<table>
  <tr>
    <th>image_url</th>
    <th>title</th>
    <th>description</th>
    <th>price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.image_url %></td>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', "/products/#{product.id}" %></td>
    <td><%= link_to 'Edit', "/products/#{product.id}/edit" %></td>
    <td><%= link_to 'Destroy', "/products/#{product.id}/delete", :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New product','/products/new' %>

